<h1 class="title">ストーリーズ</h1>

<% @stories.each do |story| %>
<div class="content">
<h2 class="title">
  <%= story.title %>
  <%= content_tag :span, "投稿済み", class: "tag is-primary" if story.published? %>
</h2>
<p><%= story.content %></p>
<p>
編集記録: <%= time_ago_in_words(story.updated_at) %>
<%= link_to "編集", edit_story_path(story), class: "button is-text is-small" %>
<%= link_to "削除", story, method: "delete", class: "button is-danger is-small", data:{confirm: "削除されますか？"} %>
</p>
</div>
<hr>
<% end %>

